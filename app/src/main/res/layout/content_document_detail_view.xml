<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_document_detail_view"
    tools:context="com.example.osulld13.digitalcollections.DocumentDetailViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/detailViewHeadLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <RelativeLayout
                android:id="@+id/detailViewImageContainer"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/black"
                android:layout_marginRight="20dp">


                <ImageView
                    android:id="@+id/detailViewImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/detail_view_title_label"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/detailViewTitleTextViewLabel"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/detailViewImageContainer"
                android:layout_toEndOf="@+id/detailViewImageContainer"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/detailViewTitleTextView"
                android:textColor="@android:color/black"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_below="@+id/detailViewTitleTextViewLabel"
                android:layout_toRightOf="@+id/detailViewImageContainer"
                android:layout_toEndOf="@+id/detailViewImageContainer" />

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>
