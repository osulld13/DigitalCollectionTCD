<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:id="@+id/searchResultImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:textColor="@android:color/black"
        android:id="@+id/searchResultTitleTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/searchResultImageView"
        android:layout_toEndOf="@+id/searchResultImageView"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/searchResultSubTextView"
        android:layout_below="@+id/searchResultTitleTextView"
        android:layout_toRightOf="@+id/searchResultImageView"
        android:layout_toEndOf="@+id/searchResultImageView"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="3dp"/>

</RelativeLayout>